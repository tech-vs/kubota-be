// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // binaryTargets = ["native", "linux-musl", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {

  id Int @id @default(autoincrement())
  username String @unique
  password String
  role Role  @default(Operator)
  createdAt DateTime?  @default(now())
}

enum Role {
  Operator
  Manager
  SAP_Operator
  Administrator
}

model Pallet {
  id Int @id @default(autoincrement())
  palletNo String @unique
  part1 String
  part2 String
  part3 String
  part4 String
  status Status
}
enum Status {
  Finished
  Repack
}

model CheckSheet {
  id Int @id @default(autoincrement())
  idNo String @unique
  question1 String
  question2 String
  question3 String
  question4 String
  question5 String
  question6 String
  question7 String
  requestApproval Boolean @default(false)
  isApproved Boolean @default(false)
}
